<p style="color: green"><%= notice %></p>

<h1>Coffees</h1>

<%= search_form_for @search do |f| %>
  <%= f.label :name_cont, "名前" %>
  <%= f.search_field :name_cont %>
  <%= f.submit %>
  <%= link_to "クリア", coffees_path %>
<% end %>

 <%= sort_link(@search, :name) %>
 <%= sort_link(@search, :body) %>

<div id="coffees">
  <% @coffees.each do |coffee| %>
    <%= render coffee %>
    <p>
      <%= link_to "Show this coffee", coffee %>
    </p>
  <% end %>
</div>

<%= link_to "New coffee", new_coffee_path %>

<%= paginate @coffees %>
%= link_to "New coffee", new_coffee_path %>