<div class="row py-2 border-top">
  <div class="col-4 my-auto">
    <%= espresso.name %>
  </div>
  <div class="col-4 my-auto">
    <%= espresso.description %>
  </div>
  <div class="col-4">
    <div class="d-flex justify-content-end">
      <%= link_to "編集", edit_espresso_path(espresso), class: "btn btn-sm btn-outline-primary me-2" %>
      <%= button_to "削除", espresso, method: :delete, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
</div>